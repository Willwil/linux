/dts-v1/;

#include "hip06.dtsi"

/ {
	model = "Hisilicon Hip06 D03 Development Board";
	compatible = "hisilicon,hip06-d03";

	memory@00000000 {
		device_type = "memory";
		reg = <0x0 0x0 0x0 0x40000000>;
	};

	aliases {
	         serial0 = &uart0;
	};

	numa-nodes-info {
		node0: p0-ta {
			mem-ranges = <0x0 0x0 0x0 0x0>;
			cpus-list = <&CPU0 &CPU1 &CPU2 &CPU3>,
				    <&CPU4 &CPU5 &CPU6 &CPU7>,
				    <&CPU8 &CPU9 &CPU10 &CPU11>,
				    <&CPU12 &CPU13 &CPU14 &CPU15>;
		};

		node1: p0-tc {
			mem-ranges = <0x0 0x0 0x0 0x0>;
			cpus-list = <&CPU16 &CPU17 &CPU18 &CPU19>,
				    <&CPU20 &CPU21 &CPU22 &CPU23>,
				    <&CPU24 &CPU25 &CPU26 &CPU27>,
				    <&CPU28 &CPU29 &CPU30 &CPU31>;
		};

		nodes-distance {
			distance-list = <&node0 &node1 15>;
		};
	};

	chosen {
		bootargs = "rdinit=/sbin/init console=ttyS1,115200 earlycon=hisilpcuart,mmio,0xa01b0000,0,0x2f8 ainitrd=0x7000000,500M pci=pcie_bus_perf";
	};

	gpio_keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		pwrbutton {
			label = "Power Button";
			gpios = <&porta 8 1>;
			linux,code = <116>;
			debounce-interval = <0>;
		};
	};
};
